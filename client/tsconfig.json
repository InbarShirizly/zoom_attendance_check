{
  "compilerOptions": {
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "lib": ["ESNext", "DOM"],
    "preserveSymlinks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true,
    "baseUrl": "packages"
  },
  "files": [],
  "references": [
    {
      "path": "packages/application/tsconfig.json"
    },
    {
      "path": "packages/services/tsconfig.json"
    },
    {
      "path": "packages/components/tsconfig.json"
    }
  ]
}
